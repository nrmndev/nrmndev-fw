{
  "compilerOptions": {
    "composite": true,

    // This is for Development vite: module & moduleResolution
    // "module": "ESNext",
    // "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",

    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    //"tsBuildInfoFile": "./.tsbuildinfo/tsconfig.app.tsbuildinfo",
    // This is for building TSC for NPM Publish: target, module, moduleResolution
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "paths": {
      "@uiComponents": ["components/index"],
      "@uiTypes": ["types/index"],
      "@hooks/*": ["hooks/*"],
      "@images/*": ["images/*"],
      "@routing": ["routing"],
      "@basetypes": ["types/base/index"],
      "@uniontypes": ["types/union/index"],
      // "@proptypes": ["types/props/index"],
      "@utils": ["utils/index"]
    }
  },
  "include": ["src"],
  // "exclude": [
  //   "node_modules",
  //   "dist",
  //   "src/app.tsx",
  //   "src/main.tsx",
  //   "src/routing",
  //   "src/stories",
  //   "**/*.bak.ts"
  // ]
  "exclude": ["node_modules", "**/*.bak.ts"]
}
